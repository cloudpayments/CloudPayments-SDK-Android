    <style name="cpsdk_TextInputLayout">
        <item name="android:textColorHint">@color/cpsdk_edit_text_hint</item>
        <item name="hintTextColor">@color/cpsdk_edit_text_hint</item>
        <item name="minHeight">20dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="cpsdk_TextInputEditText">
        <item name="minHeight">20dp</item>
        <item name="android:background">@drawable/cpsdk_bg_edit_text_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
